<h2 class="title-center">Sign in to your acount</h2>

<div  class="formulario">
 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "overline" %><br />
    <%= f.email_field :email, placeholder: "example@mail.com", class: "w-full input", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "overline" %><br />
    <%= f.password_field :password, placeholder: "**********", class: "w-full input", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", class: "w-full button button--primary" %>
  </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>