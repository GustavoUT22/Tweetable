<h2 class="title-center">Create an acount</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="tweet input-box">
  <div class="field">
    <%= f.label :username, class: "overline" %><br />
    <%= f.text_field :username, placeholder: "example", class: "w-full input"%>
  </div>

  <div class="field">
    <%= f.label :email, class: "overline" %><br />
    <%= f.email_field :email, placeholder: "example@mail.com", class: "w-full input", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :name, class: "overline"%><br />
    <%= f.text_field :name, placeholder: "Example Name", class: "w-full input" %>
  </div>

  <div class="field">
  <%= f.label :avatar, class: "overline"%>
  <%= f.file_field :avatar, accept: 'image/png, image/jpeg' %>
  </div>

  <div class="field">
    <%= f.label :password, class: "overline"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "**********", class: "w-full input", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "overline" %><br />
    <%= f.password_field :password_confirmation, placeholder: "**********", class: "w-full input", autocomplete: "new-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", class: "w-full button button--primary"  %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>